 <div id="addCategoryModal" class="modal modal-edu-general default-popup-PrimaryModal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header header-color-modal bg-color-1">
                <h4 class="modal-title">Add a new Category</h4>
                <div class="modal-close-area modal-close-df">
                    <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                </div>
            </div>
            <div class="modal-body" style="padding: 0; text-align: left">
                <div style="padding: 20px; background-color: white; margin: 20px;">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div id="dropzone1" class="pro-ad addcoursepro" > 
                                <form  action="/upload" class="dropzone dropzone-custom needsclick addcourse"  id="demo1-upload">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label for="addCategoryNameBox">Category's name</label>
                                                <input id="addCategoryNameBox" name="coursename" type="text" class="form-control" placeholder="Category Name">
                                            </div>
                                            <div class="form-group alert-up-pd">
                                                <label for="addCategoryNameBox">Category's Icon</label>
                                                <div class="dz-message needsclick download-custom">
                                                    <i class="fa fa-download edudropnone" aria-hidden="true"></i>
                                                    <h2 class="edudropnone">Drop image here or click to upload.</h2>
                                                    <input name="imageico" class="hd-pro-img" type="text" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a data-dismiss="modal" href="#">Cancel</a>
                <a href="/categories">Submit</a>
            </div>
        </div>
    </div>
</div>

